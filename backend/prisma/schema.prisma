generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  username      String   @unique
  avatarUrl     String?  @default("default_avatar.png")
  createdAt     DateTime @default(now())
  isOnline      Boolean  @default(false)
  refreshToken  String?
}
